# Automation Factory Backend Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=Automation Factory API
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database Configuration
# Supported values: sqlite, postgresql
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
SQLITE_DB_PATH=./automation_factory.db

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
POSTGRES_USER=ansible
POSTGRES_PASSWORD=ansible
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=automation_factory

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000
